{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Vimscript",
  "fileTypes": [".vim", ".vimrc"],
  "scopeName": "source.vimscript",
  "patterns": [
    {
      "name": "comment.line",
      "match": "^\\s*\".*$"
    },
    {
      "name": "variable.language",
      "match": "@[a-zA-Z]"
    },
    {
      "name": "storage.type",
      "match": "^\\s*(let|const)\\b"
    },
    {
      "name": "entity.name.function",
      "match": "^\\s*(eval|call)\\b"
    },
    {
      "name": "entity.name.function",
      "match": "^\\s*(map|nmap|vmap|smap|xmap|omap|map!|imap|lmap|cmap)\\b"
    },
    {
      "name": "entity.name.function",
      "match": "^\\s*(noremap|nnoremap|vnoremap|snoremap|xnoremap|onoremap|noremap!|inoremap|lnoremap|cnoremap)\\b"
    },
    {
      "name": "entity.name.function",
      "match": "^\\s*(unmap|nunmap|vunmap|sunmap|xunmap|ounmap|unmap!|iunmap|lunmap|cunmap)\\b"
    },
    {
      "name": "entity.name.function",
      "match": "^\\s*set\\b"
    },
    {
      "name": "keyword.control",
      "match": "^\\s*(if|elseif|else|endif|while|endwhile|for|endfor|break|continue|finish|throw)\\b"
    },
    {
      "name": "keyword.operator",
      "match": "(\\+|-|\\*|/|%|\\.\\?)=?"
    },
    {
      "name": "keyword.operator",
      "match": "="
    },
    {
      "name": "constant.language",
      "match": "v:(true|false)"
    },
    {
      "name": "constant.numeric",
      "match": "\\d+(\\.\\d+)?"
    },
    {
      "name": "constant",
      "match": "(?i)<Leader>"
    },
    {
      "name": "constant",
      "match": "(?i)<(CR|Enter|Return)>"
    },
    {
      "name": "constant",
      "match": "(?i)<(BS|Del|Space)>"
    },
    {
      "name": "constant",
      "match": "(?i)<Esc>"
    },
    {
      "name": "constant",
      "match": "(?i)<(Up|Down|Left|Right)>"
    },
    {
      "name": "constant",
      "match": "(?i)<[CD]-.>"
    },
    {
      "name": "string.quoted.single",
      "match": "'.*'"
    },
    {
      "name": "string.quoted.double",
      "match": "\".*\""
    },
    {
      "name": "string.unquoted",
      "match": "(?i)[\\w-]+(\\.[\\w-]+)+"
    }
  ]
}
